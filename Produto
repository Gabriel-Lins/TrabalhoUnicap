class Produto {
    String nome;
    double preco;

    public Produto(String nome, double preco) {
        this.nome = nome;
        this.preco = preco;
    }

    public void exibirDados() {
        System.out.println("Nome do produto: " + nome);
        System.out.println("Pre√ßo: " + preco);
    }
}
